<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mskat.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_portrait" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Udacity"
        android:layout_above="@+id/udacity"
        android:textSize="40sp"
        android:textColor="#332830"
        android:textStyle="italic"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.udacity.com"
        android:layout_alignParentBottom="true"
        android:textSize="17sp"
        android:textColor="#332830"
        android:textStyle="italic"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2465 Latham St"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/adress"
        android:textSize="15sp"
        android:textColor="#332830"
        android:textStyle="italic"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mountain View, CA 94043"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/phone"
        android:textSize="15sp"
        android:textColor="#332830"
        android:textStyle="italic"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="650-555-5555"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textColor="#332830"
        android:textStyle="italic"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>

</RelativeLayout>
